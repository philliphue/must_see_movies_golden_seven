<h1>Actors</h1>

<a href="http://localhost:3000/actor_form">Add a New Actor</a>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
  </tr>
  <% @actors_list.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td width="800">
      <%= actor.bio.truncate(300) %> <a href="http://localhost:3000/actors/<%= actor.id %>">Show More</a>
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
