<h1>Directors</h1>

<a href="http://localhost:3000/director_form">Add a New Director</a>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
  </tr>
  <% @directors_list.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td width="800">
      <%= director.bio.truncate(300) %> <a href="http://localhost:3000/directors/<%= director.id %>">Show More</a>
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= director.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
